---
import { Image } from "astro:assets";
import BaseLayout from "./BaseLayout.astro";

import avatar from "../images/avatar.png";

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
  <article class="xl:w-1/3 xl:mx-auto p-8 md:16 xl:p-0 xl:py-16">
    <header class="flex flex-col xl:gap-12 gap-8 mb-16">
      <h1 class="xl:text-6xl text-5xl font-bold xl:w-2/3">
        {frontmatter.title}
      </h1>
      <a class="flex gap-4 items-center w-fit" href="/">
        <Image src={avatar} alt="My avatar" width="48" class="rounded-full" />
        <h3 class="text-xl font-semibold">interrrp</h3>
      </a>
    </header>
    <main class="prose prose-invert prose-neutral text-justify">
      <slot />
    </main>
  </article>
</BaseLayout>
