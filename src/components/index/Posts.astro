---
const allPosts = await Astro.glob("../../pages/posts/*.md");
---

<main class="p-8 md:p-0 md:py-16 md:w-1/2 lg:w-1/3 md:mx-auto">
  <h1 class="text-4xl font-bold mb-8">Posts</h1>
  <ul class="flex flex-col gap-6">
    {
      allPosts.map((post) => (
        <li>
          <article>
            <a href={post.url} class="text-2xl font-semibold">
              {post.frontmatter.title}
            </a>
            <p class="text-neutral-400 mt-2">{post.frontmatter.description}</p>
          </article>
        </li>
      ))
    }
  </ul>
</main>
